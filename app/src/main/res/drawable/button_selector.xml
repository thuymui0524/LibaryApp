<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi button được nhấn -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF6200EE" /> <!-- Màu khi nhấn -->
            <corners android:radius="0dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Màu nền khi hover -->
            <corners android:radius="0dp" />
        </shape>
    </item>

    <!-- Trạng thái mặc định -->
    <item>
        <shape>
            <solid android:color="#73BFFB" /> <!-- Màu mặc định -->
            <corners android:radius="0dp"/>
        </shape>
    </item>
</selector>